{
	"name": "@paperless/angular",
	"version": "2.0.1-beta.0",
	"scripts": {
		"ng": "ng",
		"set-version": "cd projects/paperless && yarn version --new-version=$(node -p \"require('../../package.json').version\") --no-git-tag-version",
		"start": "ng serve",
		"prebuild": "yarn",
		"build": "ng build",
		"postbuild": "yarn tailwind:process",
		"prebuild:prod": "yarn set-version",
		"build:prod": "ng build --configuration production",
		"postbuild:prod": "yarn tailwind:process",
		"tailwind:process": "tailwindcss -c ./projects/paperless/tailwind.config.js -i projects/paperless/src/paperless.scss -o dist/paperless.css",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"preyarn:publish": "cp ../../README.md ./dist/",
		"yarn:publish": "yarn publish ./dist  --access=public",
		"pb:serve": "ng serve --project=playground --host=0.0.0.0 --disable-host-check",
		"prettier:check": "yarn prettier \"./projects/**/src/**/*.{ts,tsx,html,scss,json}\"",
		"prettier:write": "yarn prettier:check -w"
	},
	"dependencies": {
		"@angular/animations": "15.2.9",
		"@angular/cdk": "15.0.0",
		"@angular/common": "15.2.9",
		"@angular/compiler": "15.2.9",
		"@angular/core": "15.2.9",
		"@angular/forms": "15.2.9",
		"@angular/platform-browser": "15.2.9",
		"@angular/platform-browser-dynamic": "15.2.9",
		"@angular/router": "15.2.9",
		"@ngneat/until-destroy": "10.0.0",
		"rxjs": "7.8.1",
		"tslib": "2.5.0",
		"zone.js": "0.13.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "15.2.8",
		"@angular/cli": "15.2.8",
		"@angular/compiler-cli": "15.2.9",
		"@types/jasmine": "5.1.4",
		"@types/node": "20.10.3",
		"autoprefixer": "10.4.14",
		"jasmine-core": "5.0.0",
		"karma": "6.4.2",
		"karma-chrome-launcher": "3.2.0",
		"karma-coverage": "2.2.0",
		"karma-jasmine": "5.1.0",
		"karma-jasmine-html-reporter": "2.0.0",
		"ng-packagr": "15.2.2",
		"postcss": "8.4.23",
		"tailwindcss": "3.4.1",
		"typescript": "4.8.2"
	}
}
