{
	"name": "paperless",
	"version": "2.0.0",
	"main": "index.js",
	"license": "MIT",
	"root": true,
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"resolutions": {
		"@types/react": "18.2.6",
		"@types/react-dom": "18.2.4"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/employes/paperless.git"
	},
	"scripts": {
		"link:core": "cd packages/core && yarn link",
		"link:react": "cd packages/react && yarn link @paperless/core",
		"link:angular": "cd packages/angular && yarn link @paperless/core",
		"build:core": "yarn workspace @paperless/core build",
		"build:core:prod": "yarn workspace @paperless/core build:prod",
		"build:core:watch": "yarn workspace @paperless/core watch",
		"build:core:watch:bg": "yarn workspace @paperless/core watch:bg",
		"test:core": "yarn workspace @paperless/core test",
		"postbuild:core": "yarn link:core",
		"prebuild:react": "yarn link:react",
		"build:react": "cd packages/react && yarn build",
		"prebuild:angular": "yarn link:angular",
		"build:angular": "cd packages/angular && yarn build",
		"build": "yarn build:core && yarn build:react && yarn build:angular",
		"build:prod": "yarn build:core:prod && yarn build:react:prod && yarn build:angular:prod",
		"start": "yarn workspace @paperless/core start",
		"start:angular:playground": "yarn workspace @paperless/angular pb:serve",
		"test": "cd packages/core && yarn test",
		"predocker:start": "yarn",
		"docker:start": "yarn start",
		"predocker:angular:playground": "yarn && yarn build:core:prod",
		"docker:angular:playground": "yarn start:angular:playground",
		"predocker:storybook": "rm -rf ./packages/core/dist && yarn && yarn build:core:watch:bg",
		"docker:storybook": "yarn storybook:start",
		"install:core": "cd packages/core && yarn",
		"install:react": "cd packages/react && yarn",
		"install:angular": "cd packages/angular && yarn",
		"prestorybook:start": "yarn build:core",
		"storybook:start": "start-storybook -p 5200 -h 0.0.0.0",
		"storybook:build": "yarn build-storybook -o dist",
		"storybook:deploy": "sls deploy --stage production",
		"lerna:version": "lerna version prerelease --preid beta --conventional-commits --yes --force-publish",
		"lerna:version:prerelease": "yarn lerna:version prerelease --preid beta",
		"lerna:version:nopush": "yarn lerna:version --no-push",
		"lerna:lint": "lerna run lint",
		"lerna:lint:fix": "lerna run lint:fix",
		"lerna:publish": "lerna run yarn:publish --stream",
		"lerna:build": "lerna run build --scope=@paperless/core && lerna run build --ignore=@paperless/core --stream",
		"lerna:build:prod": "lerna run build:prod --scope=@paperless/core && lerna run build:prod --ignore=@paperless/core --stream",
		"lerna:prettier": "lerna run prettier:check",
		"lerna:prettier:write": "lerna run prettier:write"
	},
	"devDependencies": {
		"@angular-eslint/builder": "^17.2.1",
		"@angular-eslint/eslint-plugin": "^17.2.1",
		"@angular-eslint/eslint-plugin-template": "^17.2.1",
		"@angular-eslint/schematics": "^17.2.1",
		"@angular-eslint/template-parser": "^17.2.1",
		"@babel/core": "7.21.8",
		"@babel/preset-react": "7.18.6",
		"@geometricpanda/storybook-addon-badges": "1.1.1",
		"@geometricpanda/storybook-addon-iframe": "0.2.2",
		"@nrwl/eslint-plugin-nx": "15.9.7",
		"@stencil/eslint-plugin": "^0.4.0",
		"@storybook/addon-actions": "6.5.16",
		"@storybook/addon-controls": "6.5.16",
		"@storybook/addon-docs": "6.5.16",
		"@storybook/addon-essentials": "6.5.16",
		"@storybook/addon-interactions": "6.5.16",
		"@storybook/addon-links": "6.5.16",
		"@storybook/addon-postcss": "2.0.0",
		"@storybook/builder-webpack4": "6.5.16",
		"@storybook/html": "6.5.16",
		"@storybook/manager-webpack4": "6.5.16",
		"@storybook/testing-library": "0.1.0",
		"@types/jest": "29.5.1",
		"@types/react": "18.2.6",
		"@types/react-dom": "18.2.4",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"autoprefixer": "10.4.14",
		"babel-loader": "9.1.2",
		"codemirror": "6.0.1",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "3.3.0",
		"cz-lerna-changelog": "2.0.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"fast-glob": "^3.2.12",
		"jest": "29.5.0",
		"jest-cli": "29.5.0",
		"lerna": "6.6.2",
		"nx": "15.9.7",
		"postcss": "8.4.23",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"serverless": "3.30.1",
		"serverless-cloudflare-dns": "0.4.9",
		"serverless-cloudfront-invalidate": "1.12.2",
		"serverless-s3-sync": "3.1.0",
		"styled-components": "6.0.1",
		"tailwindcss": "3.4.1",
		"typescript": "4.5.4"
	},
	"dependencies": {
		"uuid": "^9.0.0"
	}
}
